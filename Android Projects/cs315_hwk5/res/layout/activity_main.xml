<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
		<view class="cs315.yourname.hwk5.GLSceneActivity$MyGLSurfaceView"
            android:id="@+id/gl_view"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="100"
		    />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Sun_Move" 
         android:layout_weight="1"
         android:onClick="sunMove"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="sunStop"
        android:text="@string/Sun_Stop" />
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Day_Start" 
         android:layout_weight="1"
         android:onClick="dayStart"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="nightStart"
        android:text="@string/Night_Start" />
    </LinearLayout>
 </LinearLayout>